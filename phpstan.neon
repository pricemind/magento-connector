parameters:
    level: 5
    paths:
        - app/code/Stellion/Pricemind
    excludePaths:
        - app/code/Stellion/Pricemind/Test
        - app/code/Stellion/Pricemind/registration.php
    
    # Magento-specific configuration
    bootstrapFiles:
        - Test/Unit/bootstrap.php
    
    # Ignore some Magento-specific patterns
    ignoreErrors:
        - '#Call to an undefined method Magento\\Framework\\.*#'
        - '#Access to an undefined property Magento\\Framework\\.*#'
        - '#Parameter \#1 \$[a-zA-Z0-9_]+ of class [a-zA-Z0-9_\\]+ constructor expects [a-zA-Z0-9_\\]+, [a-zA-Z0-9_\\]+ given#'
        
    # Include Magento stubs if available
    stubFiles:
        - stubs/magento.stub
        
    checkMissingIterableValueType: false
    checkGenericClassInNonGenericObjectType: false
