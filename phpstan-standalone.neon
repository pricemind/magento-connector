parameters:
    level: 3
    paths:
        - app/code/Stellion/Pricemind
    excludePaths:
        - app/code/Stellion/Pricemind/registration.php
    
    # Ignore Magento-specific patterns for standalone testing
    ignoreErrors:
        - '#Call to an undefined method.*#'
        - '#Access to an undefined property.*#'
        - '#Class .* not found#'
        - '#Interface .* not found#'
        - '#Parameter .* of class .* constructor expects .*, .* given#'
        - '#Call to method .* on an unknown class#'
        
    checkMissingIterableValueType: false
    checkGenericClassInNonGenericObjectType: false
    reportUnmatchedIgnoredErrors: false
