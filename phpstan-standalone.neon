parameters:
    level: 2
    paths:
        - app/code/Stellion/Pricemind
    excludePaths:
        - app/code/Stellion/Pricemind/registration.php
    
    # Ignore Magento-specific patterns for standalone testing
    ignoreErrors:
        - '#Call to an undefined method.*#'
        - '#Access to an undefined property.*#'
        - '#Class .* not found#'
        - '#Interface .* not found#'
        - '#Parameter .* of class .* constructor expects .*, .* given#'
        - '#Call to method .* on an unknown class#'
        - '#extends unknown class#'
        - '#implements unknown interface#'
        - '#has unknown class .* as its type#'
        - '#has invalid type#'
        - '#calls parent::#'
        - '#Function .* not found#'
        - '#Access to constant .* on an unknown class#'
        - '#PHPDoc tag @var .* contains unknown class#'
        - '#You must be using the interactive console to authenticate#'
        
    treatPhpDocTypesAsCertain: false
    checkMissingIterableValueType: false
    checkGenericClassInNonGenericObjectType: false
    reportUnmatchedIgnoredErrors: false
