{
    "name": "pricemind/magento-connector-dev",
    "description": "Development setup for Pricemind Magento Connector",
    "type": "project",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload-dev": {
        "psr-4": {
            "Stellion\\Pricemind\\Test\\": "Test/",
            "Stellion\\Pricemind\\": "app/code/Stellion/Pricemind/"
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit-standalone.xml",
        "phpcs": "phpcs --standard=phpcs-standalone.xml",
        "phpstan": "phpstan analyse --configuration phpstan-standalone.neon"
    }
}
