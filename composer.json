{
    "name": "pricemind/magento-connector",
    "description": "Tracks Magento price changes and sends them asynchronously to an external API.",
    "type": "magento2-module",
    "version": "1.0.0",
    "license": ["MIT"],
    "keywords": ["magento2", "pricemind", "price-tracking", "api-integration"],
    "authors": [
        {
            "name": "Pricemind Team",
            "email": "support@pricemind.io"
        }
    ],
    "require": {
        "php": ">=7.4",
        "magento/framework": "*",
        "magento/module-catalog": "*",
        "magento/module-store": "*",
        "magento/module-config": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.7",
        "sensiolabs/security-checker": "^6.0"
    },
    "autoload": {
        "files": [
            "app/code/Stellion/Pricemind/registration.php"
        ],
        "psr-4": {
            "Stellion\\Pricemind\\": "app/code/Stellion/Pricemind/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stellion\\Pricemind\\Test\\": "Test/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "phpcs": "phpcs",
        "phpcs-fix": "phpcbf",
        "quality": [
            "@phpstan",
            "@phpcs"
        ],
        "ci": [
            "@test",
            "@quality"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "magento/*": true
        }
    },
    "support": {
        "email": "support@pricemind.io",
        "docs": "https://github.com/pricemind/magento-connector/blob/main/README.md",
        "issues": "https://github.com/pricemind/magento-connector/issues",
        "source": "https://github.com/pricemind/magento-connector"
    }
}
